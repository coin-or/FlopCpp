###########################################################################
# directories for finding COIN packages
###########################################################################

COININCDIR = @abs_include_dir@/coin

COINLIBDIR = @abs_lib_dir@

###########################################################################
# Compiler
###########################################################################

# C++ Compiler command
CXX = @CXX@

# C++ Compiler options
CXXFLAGS = @CXXFLAGS@

# additional C++ Compiler options for linking
CXXLINKFLAGS = @RPATH_FLAGS@

###########################################################################
# define SMI libs
###########################################################################

COIN_HAS_PKGCONFIG = @COIN_HAS_PKGCONFIG_TRUE@TRUE

ifeq ($(COIN_HAS_PKGCONFIG),TRUE)
LIBS += `PKG_CONFIG_PATH=@COIN_PKG_CONFIG_PATH@ @PKG_CONFIG@ --libs flopcpp`
else
LIBS += -L@abs_lib_dir@ -lFlopCpp @FLOPCPP_LIBS_INSTALLED@
endif

###########################################################################
# define CFLAGS
###########################################################################

CYGPATH_W = @CYGPATH_W@

CFLAGS = -I`$(CYGPATH_W) $(COININCDIR)`

ifeq ($(COIN_HAS_PKGCONFIG),TRUE)
CFLAGS += `PKG_CONFIG_PATH=@COIN_PKG_CONFIG_PATH@ @PKG_CONFIG@ --cflags flopcpp`
else
CFLAGS += @FLOPCPP_CFLAGS_INSTALLED@
endif

CXXFLAGS += $(CFLAGS)

LDFLAGS	= $(CXXLINKFLAGS) $(LIBS) 

###############################################################################

.DELETE_ON_ERROR:

.PHONY: default

default: all

###############################################################################

all :	aircraft transport ampl magic multiProduct tap \
        coex coexx cross xbsl cuttingStock gapmin stochbenders \
	mine train bid sudoku stampl

clean:	
	@rm aircraft transport ampl magic multiProduct tap \
	coex coexx cross xbsl cuttingStock gapmin stochbenders \
	mine train bid sudoku stampl
###############################################################################
